@using Microsoft.AspNetCore.Identity
@using CourseStripe.Extensions
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{

		if (User.IsPremium())
		{
			<li class="nav-item">
				<a class="nav-link text-dark" href="/cancel-subscription">Cancel membershipt</a>
			</li>
		}
		else
		{
			<li class="nav-item">
				<a class="nav-link text-dark" href="/checkout/subscription">Become a member</a>
			</li>
		}



		<li class="nav-item">
			<a class="nav-link text-dark" href="/checkout">Checkout SoppingCart</a>
		</li>

		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
